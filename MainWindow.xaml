<Window x:Class="DesktopWidget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MyWidget" Width="720" Height="680"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        Loaded="Window_Loaded"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Border Background="#F0F0F0" CornerRadius="40" BorderBrush="Gray" BorderThickness="2" Padding="14">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="120"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.RowSpan="3" Orientation="Vertical" HorizontalAlignment="Center">
                <TextBlock Text="볼륨" HorizontalAlignment="Center" Margin="0,6"/>
                <Slider x:Name="VolumeSlider" Orientation="Vertical" Height="420" Minimum="0" Maximum="100"
                        ValueChanged="VolumeSlider_ValueChanged"/>
                <TextBlock x:Name="VolumeLabel" Text="0%" HorizontalAlignment="Center" Margin="0,6"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,0">
                <StackPanel Width="180" Background="#FFFFFF" Padding="8" CornerRadius="10">
                    <TextBlock Text="사운드 출력 장치" FontWeight="Bold" Margin="0,0,0,6"/>
                    <ComboBox x:Name="OutputDevicesCombo" SelectionChanged="OutputDevicesCombo_SelectionChanged"/>
                </StackPanel>
                <StackPanel Width="180" Background="#FFFFFF" Padding="8" CornerRadius="10" Margin="12,0,0,0">
                    <TextBlock Text="마이크 입력 장치" FontWeight="Bold" Margin="0,0,0,6"/>
                    <ComboBox x:Name="InputDevicesCombo" SelectionChanged="InputDevicesCombo_SelectionChanged"/>
                </StackPanel>

                <Border Background="#FFFFFF" Padding="12" CornerRadius="10" Width="220" HorizontalAlignment="Right" Margin="20,0,0,0">
                    <TextBlock x:Name="ClockText" FontSize="20" FontWeight="Bold" TextAlignment="Center"/>
                </Border>
            </StackPanel>

            <Border Grid.Row="2" Grid.Column="2" Background="#FFFFFF" Padding="12" CornerRadius="18" Margin="6" >
                <Calendar x:Name="CalendarControl" />
            </Border>

            <Border Grid.Row="2" Grid.Column="0" Background="#FFFFFF" Padding="12" CornerRadius="18" Margin="6" Width="220">
                <StackPanel>
                    <TextBlock Text="설정 지역의 현재 날씨" FontWeight="Bold" Margin="0,0,0,8"/>
                    <TextBlock x:Name="WeatherLocation" FontSize="16"/>
                    <TextBlock x:Name="WeatherMain" FontSize="18" FontWeight="SemiBold" Margin="0,6"/>
                    <TextBlock x:Name="WeatherDesc" />
                    <TextBlock x:Name="WeatherTemp" FontSize="20" FontWeight="Bold" Margin="6,8,0,0"/>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <TextBox x:Name="WeatherCityBox" Width="110"/>
                        <Button Content="갱신" Click="BtnRefreshWeather_Click" Margin="6,0,0,0"/>
                        <Button Content="저장" Click="BtnSaveCity_Click" Margin="6,0,0,0"/>
                    </StackPanel>
                    <TextBlock x:Name="WeatherNote" FontSize="11" Foreground="Gray" Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <Button Content="☰" Width="40" Height="28" HorizontalAlignment="Right" VerticalAlignment="Top"
                    Click="BtnMenu_Click"/>
        </Grid>
    </Border>
</Window>
